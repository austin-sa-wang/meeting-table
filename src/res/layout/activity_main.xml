<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity" >

    <com.menu.MyAbsoluteLayout
        android:id="@+id/drag_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ddffffff" >
    </com.menu.MyAbsoluteLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/objectList"
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:divider="#b5b5b5"
            android:dividerHeight="1dp" >
        </ListView>

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/addText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="button_addTextItem"
            android:text="Add Text" />

        <Button
            android:id="@+id/addListButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="button_addList"
            android:text="Add List" />

        <Button
            android:id="@+id/addTableButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="button_addTable"
            android:text="Add Table" />

        <ImageView
            android:id="@+id/trash_bin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/trash_bin" />
    </LinearLayout>

</LinearLayout>